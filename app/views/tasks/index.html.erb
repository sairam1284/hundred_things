<div class= "container">
  <h1> Welcome to the Task Page</h1>
  <% if @winner.blank? %>
    <div class="emptymessage"> Click a category and an Activity will pop up! </div>
  <%end%>
  <div class="container-fluid">
    <% @categories.each do |cat|%>
      <span name="<%=cat%>" type="submit" class="<%= 'active' if params[:category] == cat%>" id="category"><%=link_to cat, tasks_path(category: cat) %></span>
    <%end%>
  </div>
  <br>
  <div class = "goodstuff">
    <% if !@winner.blank? %>
      <span class="randomtask"><%= @winner.task %></span>
      <p class="taskdesc"> <%=@winner.desc%> </p>
    <% end %>
  </div>
</div>
